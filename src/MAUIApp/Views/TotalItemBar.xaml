<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MAUIApp.Views.TotalItemBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">
    <Grid BindingContext="{x:Reference this}">
        <Label>
            <Label.FormattedText>
                <FormattedString>
                    <Span
                        FontAttributes="Bold"
                        Text="{Binding TotalSearch}"
                        TextColor="{StaticResource Blue}" />
                    <Span Text="  " TextColor="{StaticResource TextPrimary}" />
                    <Span Text="{Binding UnitTitle}" TextColor="{StaticResource TextPrimary}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Label HorizontalOptions="End">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Tá»•ng  " TextColor="{StaticResource TextPrimary}" />
                    <Span
                        FontAttributes="Bold"
                        Text="{Binding TotalAll}"
                        TextColor="{StaticResource Blue}" />
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </Grid>
</ContentView>
