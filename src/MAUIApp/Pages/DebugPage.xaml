<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIApp.Pages.DebugPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:MAUIApp.ViewModels"
    xmlns:views="clr-namespace:MAUIApp.Views"
    x:DataType="{x:Type viewmodels:DebugViewModel}"
    BackgroundColor="{StaticResource BackgroundSecondary}"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="Animated">

    <VerticalStackLayout Spacing="16">
        <views:NavigationBar Title="Debug" BackCommand="{Binding ClosePageCommand}">
            <Button Command="{Binding SaveAndCloseCommand}" Style="{StaticResource SaveButton}" />
        </views:NavigationBar>

        <Border Style="{StaticResource CardBorder}">
            <VerticalStackLayout>
                <Grid ColumnDefinitions="1*, 3*">
                    <Label Text="BaseUrl" VerticalOptions="Center" />
                    <Entry
                        Grid.Column="1"
                        HorizontalTextAlignment="End"
                        Text="{Binding BaseUrl}" />
                </Grid>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>
